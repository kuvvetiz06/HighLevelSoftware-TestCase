@model MulakatProjesi.Models.ContactVM

@{
	ViewData["Title"] = "Contact";
}

<style>
	.invalid {
		color: red;
	}

</style>
<div class="col-md-8">
	<div class="card">
		<div class="card-header">
			<h4>İletişim</h4>
		</div>
		<div class="card-body ">
			@if (ViewBag.Success != null)
			{
				<h2 class="invalid">@ViewBag.Success</h2>
				
			}
			<br/>
			<div class="row ">
				<form asp-action="Contact">
					<div class="row g-3">
						<div asp-validation-summary="ModelOnly" class="text-danger"></div>
						<div class="col-md-6">
							<label asp-for="Name" class="control-label">Ad Soyad</label>
							<input asp-for="Name" class="form-control" />
							<span asp-validation-for="Name" class="text-danger"></span>
						</div>
						<div class="col-md-6">
							<label asp-for="PhoneNumber" class="control-label">Telefon Numarası</label>
							<input asp-for="PhoneNumber" class="form-control" />
							<span asp-validation-for="PhoneNumber" class="text-danger"></span>
						</div>
					</div>
					<div class="form-group">
						<label asp-for="Email" class="control-label">E-Mail</label>
						<input asp-for="Email" class="form-control" />
						<span asp-validation-for="Email" class="text-danger"></span>
					</div>
					<div class="form-group">
						<label asp-for="Message" class="control-label">Mesaj</label>
						<textarea asp-for="Message" class="form-control" rows="4" cols="50" placeholder="Merhaba ben [Aday Adı Soyadı] test projesini tarafınıza e-posta
olarak ilettim."></textarea>
						<span asp-validation-for="Message" class="text-danger"></span>
					</div>
					<br />
					<div class="form-group">
						<input type="submit" value="Gönder" class="btn btn-danger" style="width: 100%;" />
					</div>
				</form>


			</div>
		</div>
	</div>
</div>


@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
